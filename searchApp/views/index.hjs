<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Museum Search</title>
    <link href="/stylesheets/style.css" rel ="stylesheet">
    <link href="/stylesheets/hoveranimations.css" rel ="stylesheet">
    <link rel="stylesheet" href="/stylesheets/animate.css">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.css" rel="stylesheet">

  </head>
  <body>
    <div class ="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-brand navbar-right">| Bristol Museum and Art Gallery</div>

        <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <div class="collapse navbar-collapse navHeaderCollapse">
          <ul class ="nav navbar-nav navbar-left">
            <li><img src="img/museumlogo.jpg" class ="logo" data-toggle="popover" tabindex="50" data-placement="right"></li>
            <li class="active"><a href ="#">Home</a></li>
            <li><a href ="#">Report an issue</a></li>
            <li><a href ="#">About</a></li>
        </ul>
         </div>
        </div>
    </div>

    <div class = "container">
        <div class ="sideBar col-sm-3">
            <div class = "navbar">
                <div class = "container">
                    <form class="navbar-form navbar-left" role="search">
                          <input type="text" id ="m" class="form-control" placeholder="Search">
                    </form>
                </div>
            </div>

            <div id= "messages" class = "list-group">
              <!-- This is where results will get added -->
            </div>
        </div>
        <div class ="col-sm-9" id="floorplan">               
              <img src="img/floorplansm.gif" alt="floorplan" id="floorplanimg">
              <div  id="floorplanTags">
                <!--Tags are added here-->
              </div>
        </div>
    </div>

    <div class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <p class ="navbar-text">This site was built by Computer Science students from the University of Bristol</p>
      </div>
    </div>

    <ul id="ToolMenu" style="" class="hide">
    <li onclick="showBroadcastModal()"><span style="">Broadcast</span></li>
    <li><a data-url='@Url.Action("ExportToExcel")' onclick="toolboxExport($(this))"><span style="">Export</span></a></li>
    <li id="toolMenu_Snapshot" style="" onclick="showSnapshotModal()"><span style="">Snapshot</span></li>
    <li id="toolMenu_Slips" style="" onclick="showSlipModal()"><span style="">Slips</span></li>
    <li id="toolMenu_Roster" style="" onclick="showRosterModal()"><span style="">Roster</span></li>
    <li id="toolMenu_Delete" style="" onclick="deleteAssignment()"><span style="">Delete</span></li>
    </ul>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.2.1.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src = "/js/index.js"></script>
  </body>
</html>